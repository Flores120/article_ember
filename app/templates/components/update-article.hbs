{{#if updateArticleForm}}
  <h4>Update {{article.name}} and {{article.details}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=name id="name"}}
        <label for="website">Website</label>
        {{input value=website id="website"}}
        <label for="gif">Gif link</label>
        {{input value=gif id="gif"}}
      </div>

      <div class="form-group">
        <label for="details">Details</label>
        {{input value=details id="details"}}
      </div>


      <button {{action 'update' article}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateArticleForm'}}>Update</button>
{{/if}}
