{{#if addNewArticle}}
  <h1>New Article</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=name id="name"}}
        <label for="website">Website</label>
        {{input value=website id="website"}}
        <label for="gif">Gif link</label>
        {{input value=gif id="gif"}}
      </div>

      <div class="form-group">
        <label for="details">Details</label>
        {{input value=details id="details"}}
      </div>

      <button {{action 'saveArticle1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'articleFormShow'}}>New Article</button>
{{/if}}
